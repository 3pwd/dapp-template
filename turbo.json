{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["ui/.next/**", "ui/src/generated.ts", "contracts/out/**/*.json", "!.next/cache/**"]
    },
    "lint": {
      "inputs": ["src/**/*.{js,jsx,ts,tsx}", "contracts/**/*.sol"]
    },
    "format": {
      "inputs": [
        "src/**/*.{js,jsx,ts,tsx}",
        "contracts/{lib,script,src,test}/*.sol",
        "!contracts/lib/forge-std/**/*",
        "*.{json,md,yml,yaml}"
      ]
    },
    "format.fix": {
      "inputs": [
        "src/**/*.{js,jsx,ts,tsx}",
        "contracts/{lib,script,src,test}/*.sol",
        "!contracts/lib/forge-std/**/*",
        "**/*.{js,json,md,yml,yaml}"
      ]
    }
  }
}
